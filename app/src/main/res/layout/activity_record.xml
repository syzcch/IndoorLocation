<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.syz.indoorlocation.mainfunc.RecordActivity">

    <EditText android:id="@+id/locX"
        android:textSize="16.0sp"
        android:textColor="#ff8a8f9d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numeric="decimal"
        android:hint="@string/loxX_hint"
        android:maxLength="100"
        android:paddingTop="?android:attr/actionBarSize"
        />

    <EditText android:id="@+id/locY"
        android:textSize="16.0sp"
        android:textColor="#ff8a8f9d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/loxY_hint"
        android:numeric="decimal"
        android:maxLength="100"
        android:paddingTop="?android:attr/actionBarSize"
        android:layout_toRightOf="@id/locX"
        />

    <TextView android:textSize="16.0sp"
        android:textColor="#ff9c3a7c"
        android:id="@+id/showDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locX"
        android:paddingTop="?android:attr/actionBarSize"
        />

    <Button android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:onClick="submit"
        android:layout_below="@id/showDetail"
        android:background="@drawable/shape"
        android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"/>

    <Button android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:onClick="reset"
        android:layout_below="@id/showDetail"
        android:layout_toRightOf="@id/submit"
        android:background="@drawable/shape"
        android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
        android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material"/>

</RelativeLayout>
